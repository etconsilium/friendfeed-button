{
	"manifest_version": 2

	,"name": "Friendfeed & Co. (ltd. ed.)"
	,"description": "Разные дополнительные удобства во FriendFeed-е. powered by frf-community. Spec thnx to Dr."
	,"background": {
		//"page": "background.html"	//	одновременно нельзя
		"scripts": ["background.js"]
	}
	//,"content_security_policy": [POLICY STRING GOES HERE]
	,"browser_action": {
		"default_icon": "icon128.png"
		,"default_title": "Friendfeed & Co."
	}
    ,"content_scripts": [ {
        "all_frames": true,
        "css": [ "content.css" ],
        "js": [ "common.js", "content-script.js" ],
        "matches": [ "http://friendfeed.com/*", "https://friendfeed.com/*" ]
    } ]
    ,"options_page": "options.html"
    ,"web_accessible_resources": [ "options.html", "share.js" ]
	,"icons": {
		"128": "icon128.png"
		,"48": "icon-48.png"
		,"32": "icon-32.png"
	}
	,"permissions": [ "background", "tabs", "storage", "http://*/*", "https://*/*" ]
	,"version": "1.9.6"
	,"update_url": "https://raw.github.com/etconsilium/friendfeed-button/master/update.xml"
}
